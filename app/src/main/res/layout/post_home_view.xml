<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/post_home"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/post_layout1"
       android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_view_image"
            android:src="@drawable/ic_avatar"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_width="60sp"
            android:layout_height="60sp" />
        <TextView
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1.5"
            android:hint="user name"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:id="@+id/Postview_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text=" Organized an Event"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/Postview_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_below="@+id/post_layout1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/home_post_title"
            android:layout_width="match_parent"
            android:hint="Title"
            android:textStyle="bold"
            android:background="@drawable/titledesign"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="40sp"
            android:textAlignment="center"
            android:padding="5sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_height="wrap_content">


        </TextView>
        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/layout_design"
            >
            <TextView
                android:id="@+id/homestart_date"
                android:hint="Start date"
                android:layout_weight="1"
                android:layout_marginLeft="40sp"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:text=" To"
                android:textAlignment="center"
                android:layout_weight="1.5"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/homestart_enddate"
                android:hint="End date"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_marginRight="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/layout_design"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/homestart_time"
                android:hint="Start Time"
                android:layout_weight="1"
                android:layout_marginLeft="40sp"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" To"
                android:textAlignment="center"
                android:layout_weight="1.3"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/homeEnd_time"
                android:hint="End Time"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:hint="Description"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="20sp"
            android:maxLines="5"
            android:id="@+id/post_view_description"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="40sp"
            android:layout_marginRight="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginLeft="40sp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_like_icon">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_view"
                android:layout_weight="1.2"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment"
                android:textColor="@android:color/black">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/share_view"
                android:layout_weight="1.2"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Share"
                android:textColor="@android:color/black">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_like"
                android:drawableTop="@drawable/ic_like_icon"
                android:background="@drawable/titledesign"
                android:text="Like"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_comment"
                android:background="@drawable/titledesign"
                android:drawableTop="@drawable/ic_comment"
                android:layout_weight="1"
                android:text="Comment"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_share"
                android:background="@drawable/titledesign"
                android:drawableTop="@drawable/ic_cooment_share"
                android:text="Share"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:layout_marginTop="5sp"
           android:background="#bebebe"></TextView>



    </LinearLayout>
</RelativeLayout>